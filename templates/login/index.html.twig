{% extends 'base.html.twig' %}

{% block title %}
    Login - EMU Web Services Application Suite
{% endblock %}


{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div>
        <img src="/images/e-box.png" width="100px" height="100px" style="float: left; margin-right: 20px;"/>
        <h1>Login - EMU Web Services Application Suite</h1>
    </div>
    <div style="clear: both; border: solid 2px #666666; max-width: 400px; padding: 20px; margin: 0 auto;">
        <form action="{{ path('app_login') }}" method="post">
            <table>
                <tr>
                    <td><label for="username">Email</label></td>
                    <td><input type="text" id="username" name="_username" value="{{ last_username }}"/></td>
                </tr>
                <tr>
                    <td><label for="password">Password</label></td>
                    <td><input type="password" id="password" name="_password"/></td>
                </tr>
            </table>

            {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}

            <br><button type="submit">LOGIN</button>
        </form>
    </div>

{% endblock %}
